{
  "name": "Bmol",
  "description": "Bmol Editor",
  "version": "0.1.0",
  "private": false,
  "main": "electron.js",
  "engines": {
    "node": ">=0.10"
  },
  "devDependencies": {
    "babel-core": "^6.1.21",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-1": "^6.3.13",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "concat-files": "^0.1.0",
    "debounce": "^1.0.0",
    "electron-packager": "^8.1.0",
    "electron-prebuilt": "^1.4.3",
    "less": "^2.5.3",
    "nanoscroller": "^0.8.7",
    "preprocess": "^3.0.2",
    "yamljs": "^0.2.8"
  },
  "dependencies": {
    "angular": "^1.4.7",
    "angular-ui-router": "^0.2.15",
    "buffer-reader": "^0.1.0",
    "jquery": "^2.1.4",
    "jsonfile": "^2.2.3",
    "lodash": "^3.10.1",
    "pngjs-image": "https://github.com/Tsur/pngjs-image",
    "semantic-ui-css": "^2.1.6"
  },
  "scripts": {
    "desktop:dev": "export NODE_ENV=development && npm run _preprocess:dev && electron .",
    "desktop:prod": "export NODE_ENV=production && npm run _preprocess:prod && electron .",
    "website:dev": "export NODE_ENV=development && ./bin/www_preprocess.js && npm run website:server",
    "website:server": "python -m SimpleHTTPServer",
    "website:build": "export NODE_ENV=production && npm run _build && node ./bin/www_preprocess.js && node ./bin/concat_styles.js",
    "release:win": "npm run _preprocess:prod && electron-packager . $npm_package_name --version-string.CompanyName=$npm_package_name --version $npm_package_config_build_version --app-version=$npm_package_version --platform='win32' --arch='x64' --ignore dbpath --out=./releases --prune",
    "release:osx": "npm run _preprocess:prod && electron-packager . $npm_package_name --version-string.CompanyName=$npm_package_name --version $npm_package_config_build_version --app-version=$npm_package_version --platform='darwin' --arch='x64' --ignore dbpath --out=./releases --prune",
    "test": "mocha test/index.js",
    "styles": "lessc styles/less/website.less > media/css/styles.css",
    "_build": "browserify src/public/entry.js -t babelify > dist/bundle.js",
    "_babel": "babel src -d es5 && cp -r src/server/templates es5/server",
    "_preprocess:dev": "export NODE_ENV=development && node bin/preprocess.js",
    "_preprocess:prod": "npm run _babel && export NODE_ENV=production && node bin/preprocess.js",
    "_db": "mongod --config /usr/local/etc/mongod.conf --dbpath ./dbpath"
  }
}
